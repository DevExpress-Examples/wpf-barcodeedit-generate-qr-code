<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxco="http://schemas.devexpress.com/winfx/2008/xaml/controls" x:Class="BarCodeControl.MainWindow"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="242" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dxco:BarCodeControl Grid.Row="0" AutoModule="True" ShowText="False" Text="{Binding Path=Text,ElementName=textBox}">
            <dxco:BarCodeControl.Symbology>
                <dxco:QRCodeSymbology CompactionMode="Byte"/>
            </dxco:BarCodeControl.Symbology>
        </dxco:BarCodeControl>
        <TextBox Grid.Row="1" Name="textBox">
            DevExpress
        </TextBox>

    </Grid>
</Window>
